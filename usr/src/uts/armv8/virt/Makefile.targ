.KEEP_STATE:

#
# Rules for implementation subdirectories.
#
$(ROOT_VIRT_DIR): $(ROOT_PLAT_DIR)
	-$(INS.dir)

$(ROOT_VIRT_MOD_DIR): $(ROOT_VIRT_DIR)
	-$(INS.dir)

$(ROOT_VIRT_DRV_DIR_32): $(ROOT_VIRT_MOD_DIR)
	-$(INS.dir)

$(ROOT_VIRT_DRV_DIR_64): $(ROOT_VIRT_DRV_DIR_32)
	-$(INS.dir)

$(ROOT_VIRT_LIB_DIR): $(ROOT_VIRT_DIR)
	-$(INS.slink2)

$(ROOT_VIRT_MISC_DIR_32): $(ROOT_VIRT_MOD_DIR)
	-$(INS.dir)

$(ROOT_VIRT_MISC_DIR_64): $(ROOT_VIRT_MISC_DIR_32)
	-$(INS.dir)

$(ROOT_VIRT_MOD_DIR)/%: $(OBJS_DIR)/% $(ROOT_VIRT_MOD_DIR) FRC
	$(INS.file)

$(ROOT_VIRT_MISC_DIR)/%: $(OBJS_DIR)/% $(ROOT_VIRT_MISC_DIR) FRC
	$(INS.file)

$(ROOT_VIRT_DRV_DIR)/%: $(OBJS_DIR)/% $(ROOT_VIRT_DRV_DIR) FRC
	$(INS.file)

$(USR_VIRT_DIR):	$(USR_ARMV8_PLAT_DIR)
	-$(INS.dir)

$(USR_VIRT_INC_DIR):	$(USR_VIRT_DIR)
	-$(INS.slink4)

$(USR_VIRT_ISYS_DIR):	$(USR_VIRT_INC_DIR)
	-$(INS.dir)

$(USR_VIRT_SBIN_DIR):	$(USR_VIRT_DIR)
	-$(INS.slink5)

$(USR_VIRT_LIB_DIR):	$(USR_VIRT_DIR)
	-$(INS.dir)

$(LINKED_PLATFORMS:%=$(USR_PLAT_DIR)/%): $(USR_PLAT_DIR)
	$(INS.slink3)
$(PPLINKED_PLATFORMS:%=$(ROOT_PLAT_DIR)/%): $(ROOT_PLAT_DIR)
	$(INS.slink3)

#
#	Include common targets.
#
include $(UTSBASE)/$(PLATFORM)/virt/Makefile.rules
include $(UTSBASE)/$(PLATFORM)/Makefile.targ
